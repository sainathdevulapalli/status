<!DOCTYPE html>
<html>
<head>
  <title>Status</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
	 <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-fixed-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">Checkin</a>
        </div>
        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li><%= link_to "Checkins", checkins_path %></li>
            </ul>
            <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li><%= link_to current_user.full_name, edit_user_registration_path %></li>
               <li><%= link_to "logout", logout_path %></li>
               <%else%>
                <li><%= link_to "Register", register_path %></li>
                <li><%= link_to "Login", login_path %></li>
               <%end%>

            </ul>
        </div><!--/.nav-collapse -->
      </div>
    </nav>


	<div class="container" id="flash">
	   <% if flash[:notice] %>
        <div class="alert alert-success" role="alert">  <button class="close" data-dismiss="alert">x</button>
        <%= flash[:notice] %>
        </div>
     <% end %>

     <% if flash[:alert] %>
        <div class="alert alert-danger" role="alert">  <button class="close" data-dismiss="alert">x</button>
        <%= flash[:alert] %>
        </div>
     <% end %>

		<%= yield %>
	</div>
</body>
</html>

<style type="text/css">
  body{
    padding-top: 65px;
  }
  

</style>